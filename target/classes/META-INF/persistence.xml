<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="videoPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>mx.uach.videoclubhibernate.models.Director</class>
    <class>mx.uach.videoclubhibernate.models.Pelicula</class>
    <class>mx.uach.videoclubhibernate.models.Ficha</class>
    <class>mx.uach.videoclubhibernate.models.PeliculasActores</class>
    <class>mx.uach.videoclubhibernate.models.DirectorSocio</class>
    <class>mx.uach.videoclubhibernate.models.Socio</class>
    <class>mx.uach.videoclubhibernate.models.CintaFicha</class>
    <class>mx.uach.videoclubhibernate.models.Lista</class>
    <class>mx.uach.videoclubhibernate.models.Cinta</class>
    <class>mx.uach.videoclubhibernate.models.ActorSocio</class>
    <class>mx.uach.videoclubhibernate.models.Actor</class>
    <validation-mode>CALLBACK</validation-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mydb?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="1234"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
    </properties>
  </persistence-unit>
</persistence>
